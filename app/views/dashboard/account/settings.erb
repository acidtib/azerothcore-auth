  
<div class="row gutters-sm my-5">
  <div class="col-md-3 d-none d-md-block">
    <%= partial(:"/dashboard/account/partials/nav", :active => "account") %>
  </div>

  <div class="col-md-9">
    <div class="card">
      <div class="card-header border-bottom mb-3 d-flex d-md-none">
        <%= partial(:"/dashboard/account/partials/nav_mobile", :active => "account") %>
      </div>

      <div class="card-body">
        <div class="">
          <h6>ACCOUNT SETTINGS</h6>
          <hr>

          <form action="/account/settings/<%= current_user.id %>" method="POST">
						<div class="form-group mb-3">
              <label for="email">Email</label>
              <input type="email" name="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter your email" value="<%= current_user.email %>" required>
            </div>

            <div class="form-group">
              <label for="username">Username</label>
              <input type="text" name="username" class="form-control" id="username" aria-describedby="usernameHelp" placeholder="Enter your username" value="<%= current_user.username.downcase %>" required>
              <small id="usernameHelp" class="form-text text-muted">After changing your username, your old username becomes available for anyone else to claim.</small>
            </div>

            <hr>

						<button type="submit" class="btn btn-primary">Update</button>
          </form>

        </div>
      </div>
    </div>
  </div>
</div>




